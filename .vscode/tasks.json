    "version": "2.0.0",
    "tasks": [
        {
            "label": "OpenCV",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I",
                "D:\\Mingw_openCV\\OpenCV-MinGW-Build-OpenCV-4.5.5-x64\\include",
                "-L",
                "D:\\Mingw_openCV\\OpenCV-MinGW-Build-OpenCV-4.5.5-x64\\x64\\mingw\\bin",
                "-llibopencv_calib3d455",
                "-llibopencv_core455",
                "-llibopencv_dnn455",
                "-llibopencv_features2d455",
                "-llibopencv_flann455",
                "-llibopencv_highgui455",
                "-llibopencv_imgcodecs455",
                "-llibopencv_imgproc455",
                "-llibopencv_ml455",
                "-llibopencv_objdetect455",
                "-llibopencv_photo455",
                "-llibopencv_stitching455",
                "-llibopencv_video455",
                "-llibopencv_videoio455"
